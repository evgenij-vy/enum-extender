{
  "name": "evgenij-vy/enum-extender",
  "description": "Extend native php enums",
  "minimum-stability": "stable",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "EvgenijVY\\EnumExtender\\": "src/",
      "EvgenijVY\\EnumExtender\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Evgen Yurchenko",
      "email": "evgenijvy@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92",
    "phpstan/phpstan": "^2.1",
    "sebastian/diff": "^5.1.1",
    "phpunit/phpunit": "^10"
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix",
    "cs-check": "php-cs-fixer fix --dry-run",
    "stan-check": "phpstan analyse",
    "test": "phpunit tests",
    "pipeline": [
      "@cs-fix",
      "@stan-check",
      "@test"
    ]
  }
}
